{# empty Twig template #}
{% set url = path('ads_show', {'slug': ad.slug }) %}
<div class="col-md-4">
    <div class="card bg-light mb-3">
        <div class="card-header text-center">
            {{ ad.rooms }} chambres, <strong>{{ ad.price }} euro/nuit</strong>
            <small>pas not√©</small>
        </div>
        <a href="{{ url }}" >
            <img src="{{ ad.coverImage }}" alt="image de l'appartment" style="height: 200; width:100%; display: block">
        </a>
        <div class="card-body">
            <h4 class="card-title">
                <a href="{{ url }}" >
                    {{ ad.title }}
                </a>
            </h4>
            <p class="card-text"> {{ ad.introduction }}
            </p>
            <a class="btn btn-secondary btn-lg" href="{{ url }}" role="button">En savoir plus!</a>
            {% if app.user and app.user == ad.author %}
                <a href="path('ads_edit',{'slug':ad.slug})" class="btn btn-secondary">Modifier l'annonce </a>
            {% endif %}
        </div>
    </div>
</div>